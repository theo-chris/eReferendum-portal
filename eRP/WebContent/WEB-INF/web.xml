<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <display-name>eRP</display-name>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>Servlets.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AvailableEmail</servlet-name>
        <servlet-class>Servlets.AvailableEmail</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AvailableEmail</servlet-name>
        <url-pattern>/existingEmail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AvailableBIC</servlet-name>
        <servlet-class>Servlets.AvailableBIC</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AvailableBIC</servlet-name>
        <url-pattern>/availableBIC</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Vote</servlet-name>
        <servlet-class>Servlets.VoteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Vote</servlet-name>
        <url-pattern>/vote</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterVoteServlet</servlet-name>
        <servlet-class>Servlets.RefVote</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterVoteServlet</servlet-name>
        <url-pattern>/collectVote</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditReferendum</servlet-name>
        <servlet-class>Servlets.EditReferendum</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditReferendum</servlet-name>
        <url-pattern>/editReferendum</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApplyEdit</servlet-name>
        <servlet-class>Servlets.ApplyEdit</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApplyEdit</servlet-name>
        <url-pattern>/doneEdit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChoiceEdit</servlet-name>
        <servlet-class>Servlets.ChoiceEdit</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChoiceEdit</servlet-name>
        <url-pattern>/choiceEdit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StopRef</servlet-name>
        <servlet-class>Servlets.StopRef</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StopRef</servlet-name>
        <url-pattern>/stopReferendum</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StartRef</servlet-name>
        <servlet-class>Servlets.StartRef</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StartRef</servlet-name>
        <url-pattern>/startReferendum</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Results</servlet-name>
        <servlet-class>Servlets.ResultsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Results</servlet-name>
        <url-pattern>/results</url-pattern>
    </servlet-mapping>
</web-app>